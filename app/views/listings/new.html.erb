<div class="form-container">
  <h1>Create a Listing</h1>

  <%= form_with model: @listing, local: true, class: "listing-form" do |form| %>
    <% if @listing.errors.any? %>
      <div class="error-messages">
        <h3><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h3>
        <ul>
          <% @listing.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, required: true, class: "form-control", autofocus: true %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, required: true, class: "form-control", rows: 6 %>
    </div>

    <div class="form-group">
      <%= form.label :price, "Price ($)" %>
      <%= form.number_field :price, step: 0.01, min: 0.01, required: true, class: "form-control" %>
      <small>For auctions, this will be the starting price</small>
    </div>

    <div class="form-group">
      <%= form.label :category_id, "Category" %>
      <%= form.collection_select :category_id, Category.order(:name), :id, :name, { prompt: "Select a category" }, { required: true, class: "form-control" } %>
    </div>

    <div class="form-group">
      <%= form.label :listing_type, "Listing Type" %>
      <%= form.select :listing_type, [["Classified (Fixed Price)", "classified"], ["Auction (Bidding)", "auction"]], { prompt: "Select type" }, { required: true, class: "form-control" } %>
    </div>

    <div class="form-actions">
      <%= form.submit "Create Listing", class: "btn btn-primary" %>
      <%= link_to "Cancel", listings_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
