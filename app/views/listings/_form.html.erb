<%= form_with(model: listing, class: "max-w-2xl") do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-4 py-3 rounded-md mb-6">
      <h2 class="font-semibold"><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>
      <ul class="list-disc ml-6 mt-2">
        <% listing.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :user_id, value: current_user&.id %>

  <div class="mb-6">
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :title, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Enter listing title" %>
  </div>

  <div class="mb-6">
    <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :description, rows: 6, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Describe your item..." %>
  </div>

  <div class="grid grid-cols-2 gap-6 mb-6">
    <div>
      <%= form.label :category_id, "Category", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Select a category" }, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :condition, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :condition, Listing.conditions.keys.map { |k| [k.titleize, k] }, { prompt: "Select condition" }, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-6 mb-6">
    <div>
      <%= form.label :selling_type, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :selling_type, Listing.selling_types.keys.map { |k| [k.titleize, k] }, { prompt: "Select selling type" }, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>

    <div>
      <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.select :status, Listing.statuses.keys.map { |k| [k.titleize, k] }, { prompt: "Select status" }, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>
  </div>

  <div class="grid grid-cols-2 gap-6 mb-6">
    <div>
      <%= form.label :starting_price_cents, "Starting Price (cents)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.number_field :starting_price_cents, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "e.g., 1000 for $10.00" %>
    </div>

    <div>
      <%= form.label :buy_now_price_cents, "Buy Now Price (cents)", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.number_field :buy_now_price_cents, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "Optional" %>
    </div>
  </div>

  <div class="mb-6">
    <%= form.label :auction_ends_at, "Auction End Date (for auctions)", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.datetime_field :auction_ends_at, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
  </div>

  <div class="grid grid-cols-2 gap-6 mb-6">
    <div>
      <%= form.label :quantity, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.number_field :quantity, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", placeholder: "1" %>
    </div>

    <div>
      <%= form.label :currency, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :currency, value: listing.currency || "USD", class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
    </div>
  </div>

  <div class="mb-6">
    <%= form.label :images, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.file_field :images, multiple: true, class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
  </div>

  <div class="flex gap-4">
    <%= form.submit class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-md font-semibold cursor-pointer" %>
    <%= link_to "Cancel", listings_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-800 px-6 py-3 rounded-md font-semibold" %>
  </div>
<% end %>
