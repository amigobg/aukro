      <%= link_to category_path(category), class: "block" do %>
        <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
          <div class="flex items-start">
            <div class="text-4xl mr-4">ðŸ“¦</div>
            <div class="flex-1">
              <h2 class="text-xl font-semibold text-gray-900 mb-2"><%= category.name %></h2>
              <p class="text-gray-600 text-sm"><%= category.description %></p>
              <div class="mt-3 text-sm text-blue-600 font-medium">
                Browse <%= category.name %> â†’
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  
  <% if @categories.empty? %>
    <div class="bg-gray-50 border border-gray-200 rounded-lg p-12 text-center">
      <p class="text-gray-500 text-lg">No categories available yet</p>
    </div>
  <% end %>
</div>

