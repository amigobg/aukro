<div class="auth-container">
  <h1>Login</h1>

  <%= form_with url: login_path, method: :post, local: true, class: "auth-form" do |form| %>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, required: true, class: "form-control", autofocus: true %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, required: true, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Login", class: "btn btn-primary" %>
    </div>
  <% end %>

  <p class="auth-link">
    Don't have an account? <%= link_to "Sign up", new_user_path %>
  </p>
</div>
