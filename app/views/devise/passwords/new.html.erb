<%
  fields = [
    auth_form_field(
      "#{resource_name}[email]",
      label: "Email address",
      id: "#{resource_name}_email",
      type: "email",
      value: resource.email,
      placeholder: "you@example.com",
      autocomplete: "email"
    )
  ]

  links = []
  links << { label: "Return to sign in", href: new_session_path(resource_name) }
  links << { label: "Need an account? Join Aukro", href: new_registration_path(resource_name) } if devise_mapping.registerable?
%>

<%= react_component "AuthPage",
  auth_page_props(
    resource: resource,
    resource_name: resource_name,
    heading: "Reset your password",
    subheading: "Enter the email associated with your Aukro account and we'll send a secure reset link.",
    submit_label: "Send reset instructions",
    action: password_path(resource_name),
    fields: fields,
    links: links,
    meta: {
      highlight: "We'll send a message from support@aukro.com. Be sure to check spam folders if it doesn't arrive within a few minutes."
    }
  )
%>
