<%
  password_hint = if defined?(@minimum_password_length) && @minimum_password_length.present?
    "Must be at least #{@minimum_password_length} characters."
  end

  fields = [
    auth_form_field(
      "#{resource_name}[email]",
      label: "Email address",
      id: "#{resource_name}_email",
      type: "email",
      value: resource.email,
      placeholder: "you@example.com",
      autocomplete: "email"
    ),
    auth_form_field(
      "#{resource_name}[password]",
      label: "Password",
      id: "#{resource_name}_password",
      type: "password",
      placeholder: "Create a password",
      autocomplete: "new-password",
      hint: password_hint
    ),
    auth_form_field(
      "#{resource_name}[password_confirmation]",
      label: "Confirm password",
      id: "#{resource_name}_password_confirmation",
      type: "password",
      placeholder: "Re-enter your password",
      autocomplete: "new-password"
    )
  ]

  links = []
  links << { label: "Already have an account? Sign in", href: new_session_path(resource_name) }
  links << { label: "Forgot your password?", href: new_password_path(resource_name) } if devise_mapping.recoverable?
%>

<%= react_component "AuthPage",
  auth_page_props(
    resource: resource,
    resource_name: resource_name,
    heading: "Create your Aukro account",
    subheading: "Join a curated community of sellers and bidders in just a minute.",
    submit_label: "Create account",
    action: registration_path(resource_name),
    fields: fields,
    links: links
  )
%>
