<%
  fields = [
    auth_form_field(
      "#{resource_name}[email]",
      label: "Email address",
      id: "#{resource_name}_email",
      type: "email",
      value: resource.email,
      placeholder: "you@example.com",
      autocomplete: "email"
    ),
    auth_form_field(
      "#{resource_name}[password]",
      label: "Password",
      id: "#{resource_name}_password",
      type: "password",
      placeholder: "••••••••",
      autocomplete: "current-password"
    )
  ]

  if devise_mapping.rememberable?
    fields << auth_form_field(
      "#{resource_name}[remember_me]",
      label: "Keep me signed in on this device",
      id: "#{resource_name}_remember_me",
      type: "checkbox",
      checked: resource.respond_to?(:remember_me) ? resource.remember_me : false,
      required: false
    )
  end

  links = []
  links << { label: "Forgot your password?", href: new_password_path(resource_name) } if devise_mapping.recoverable?
  links << { label: "Create a new account", href: new_registration_path(resource_name) } if devise_mapping.registerable?
%>

<%= react_component "AuthPage",
  auth_page_props(
    resource: resource,
    resource_name: resource_name,
    heading: "Welcome back",
    subheading: "Sign in to access your dashboard and manage every listing in one place.",
    submit_label: "Sign in",
    action: session_path(resource_name),
    fields: fields,
    links: links
  )
%>
