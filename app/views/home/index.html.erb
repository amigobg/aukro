<div class="w-full">
  <!-- Hero Section -->
  <div class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-12 px-6 rounded-lg mb-8">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-4xl font-bold mb-4">Welcome to Aukro</h1>
      <p class="text-xl mb-6">Your premier online auction marketplace</p>
      <div class="flex justify-center gap-4">
        <%= link_to "Start Selling", new_listing_path, class: "bg-white text-blue-600 px-6 py-3 rounded-md font-semibold hover:bg-gray-100" %>
        <%= link_to "Browse Listings", listings_path, class: "bg-blue-500 text-white px-6 py-3 rounded-md font-semibold hover:bg-blue-400" %>
      </div>
    </div>
  </div>

  <!-- Categories Section -->
  <div class="mb-12">
    <h2 class="text-2xl font-bold mb-6">Shop by Category</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-4 gap-4">
      <% @categories.each do |category| %>
        <%= link_to category_path(category), class: "bg-white border border-gray-200 rounded-lg p-6 text-center hover:shadow-lg transition-shadow" do %>
          <div class="text-3xl mb-2">ðŸ“¦</div>
          <h3 class="font-semibold text-gray-900"><%= category.name %></h3>
          <p class="text-sm text-gray-500 mt-1"><%= category.description %></p>
        <% end %>
      <% end %>
    </div>
    <div class="text-center mt-6">
      <%= link_to "View All Categories", categories_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </div>
  </div>

  <!-- Featured Listings -->
  <div>
    <div class="flex justify-between items-center mb-6">
      <h2 class="text-2xl font-bold">Featured Listings</h2>
      <%= link_to "View All", listings_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
    </div>
    
    <% if @featured_listings.any? %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        <% @featured_listings.each do |listing| %>
          <%= link_to listing_path(listing), class: "block" do %>
            <div class="bg-white border border-gray-200 rounded-lg overflow-hidden hover:shadow-lg transition-shadow">
              <div class="aspect-square bg-gray-100 flex items-center justify-center">
                <% if listing.images.attached? %>
                  <%= image_tag listing.images.first, class: "w-full h-full object-cover" %>
                <% else %>
                  <span class="text-gray-400 text-4xl">ðŸ“·</span>
                <% end %>
              </div>
              <div class="p-4">
                <h3 class="font-semibold text-gray-900 mb-2 truncate"><%= listing.title %></h3>
                <div class="flex justify-between items-center">
                  <span class="text-lg font-bold text-blue-600"><%= listing.formatted_price %></span>
                  <% if listing.auction? %>
                    <span class="text-xs bg-red-100 text-red-800 px-2 py-1 rounded">Auction</span>
                  <% elsif listing.fixed_price? %>
                    <span class="text-xs bg-green-100 text-green-800 px-2 py-1 rounded">Buy Now</span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="bg-gray-50 border border-gray-200 rounded-lg p-12 text-center">
        <p class="text-gray-500 text-lg mb-4">No listings yet</p>
        <%= link_to "Create the first listing", new_listing_path, class: "text-blue-600 hover:text-blue-800 font-medium" %>
      </div>
    <% end %>
  </div>
</div>

